{
  "name": "event-scheduler",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "server",
    "client",
    "shared"
  ],
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "scripts": {
    "prepare": "husky"
  },
"lint-staged": {
  "server/src/**/*.ts": [
    "eslint --config ./server/eslint.config.mjs --fix",
    "prettier --config ./server/.prettierrc.json --write"
  ],
  "client/src/**/*.{ts,tsx}": [
    "eslint --config ./client/eslint.config.js --fix",
    "prettier --write"
  ]
}
}